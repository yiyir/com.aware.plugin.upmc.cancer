<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="com.aware.plugin.openweather" android:title="@string/app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.aware.ui.Aware_Toolbar android:title="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBoxPreference android:title="Active" android:key="status_plugin_openweather" android:summary="Local weather conditions, from OpenWeather." android:persistent="true" android:defaultValue="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListPreference android:defaultValue="metric" android:title="Measurement unit" android:key="units_plugin_openweather" android:persistent="true" android:entries="@array/units_labels" android:entryValues="@array/units_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditTextPreference android:defaultValue="30" android:title="Update frequency" android:key="plugin_openweather_frequency" android:persistent="true" android:summary="Every 30 minute(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditTextPreference android:defaultValue="" android:title="API Key" android:key="api_key_plugin_openweather" android:persistent="true" android:summary="Get key from openweathermap.org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</PreferenceScreen>
