<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.openweather"
    android:versionCode="16"
    android:versionName="2.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.Aware" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name="com.aware.plugin.openweather.Plugin"
            android:exported="true"
            android:label="OpenWeather" />
        <service
            android:name="com.aware.plugin.openweather.Plugin$OpenWeather_Service"
            android:exported="true" />

        <activity
            android:name="com.aware.plugin.openweather.Settings"
            android:configChanges="keyboard|keyboardHidden|screenSize"
            android:exported="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Aware" />
    </application>

</manifest>